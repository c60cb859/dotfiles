set git-colors = no

# main-view, reflog-view
# author, date, commit-title, id, line-number, ref
set main-view-line-number = true,interval=1
set main-view-id = true
set main-view-date = relative-compact
set main-view-author = full,width=20
set main-view-commit-title = graph=v2,refs=true

# *color* 'area' 'fgcolor' 'bgcolor' '[attributes]'
color cursor 0 106 bold
color title-focus 0 106

# window frame configurations
# set window-height 3000
# set window-width 1000
set statusbar-h-padding 0
set statusbar-v-padding 0
set page-padding 10
set adjust-open width

# Window
set window-title-basename true
set window-title-page true

# Statusbar
set statusbar-basename true
set statusbar-home-tilde true
set statusbar-page-percent true

# 'c' - commandline
# 's' - statusbar
# 'h' - horizontal scrollbar
# 'v' - vertical scrollbar
set guioptions s

# font size
set font "{{ font_mono }} {{ font_size }}"

set recolor-keephue true
set recolor-reverse-video true

# mappings
unmap i
map i recolor

unmap e
map e toggle_index
map [index] e toggle_index


# Sandbox
# set sandbox strict

# clipboard configurations
set selection-clipboard clipboard

# ----- colour config -----
set notification-error-bg "#{{ colors.black }}"
set notification-error-fg "#{{ colors.red }}"
set notification-warning-bg "#{{ colors.black }}"
set notification-warning-fg "#{{ colors.red }}"
set notification-bg "#{{ colors.black }}"
set notification-fg "#{{ colors.red }}"
set completion-group-bg "#{{ colors.black }}"
set completion-group-fg "#{{ colors.white }}"
set completion-bg "#{{ colors.blue }}"
set completion-fg "#{{ colors.black }}"
set completion-highlight-bg "#{{ colors.green }}"
set completion-highlight-fg "#{{ colors.black }}"
set inputbar-bg "#{{ colors.black }}"
set inputbar-fg "#{{ colors.blue }}"
set statusbar-bg "#{{ colors.black }}"
set statusbar-fg "#{{ colors.white }}"
set highlight-color "{{ hex2rgba colors.blue 0.5 }}"
set highlight-active-color "{{ hex2rgba colors.green 0.5 }}"
set default-bg "{{ hex2rgba colors.black 0.5 }}"
set default-fg "#{{ colors.white }}"
set recolor-lightcolor "#{{ colors.black }}"
set recolor-darkcolor "#{{ colors.white }}"
set index-bg "#{{ colors.black }}"
set index-fg "#{{ colors.blue }}"
set index-active-bg "#{{ colors.green }}"
set index-active-fg "#{{ colors.black }}"
set recolor true
